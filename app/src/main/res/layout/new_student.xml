<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="edu.cnm.deepdive.teacherparentnotficationapp.newstudent">

    <TextView
      android:id="@+id/createStudentInfo"
      android:textStyle="bold"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:paddingTop="5dp"
      android:paddingBottom="5dp"
      android:text="Name:"
      android:textSize="18sp"/>
    <EditText
      android:id="@+id/new_student"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:layout_alignTop="@id/createStudentInfo"
      android:paddingTop="10dp"
      android:paddingBottom="10dp"
      android:hint="name"
      android:inputType="textPersonName"
      android:textAlignment="viewStart"/>

    <TextView
      android:id="@+id/teacher"
      android:textStyle="bold"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:layout_alignTop="@id/new_student"
      android:paddingTop="5dp"
      android:paddingBottom="5dp"
      android:text="Date of birth:"
      android:textSize="18sp"/>
    <EditText
      android:id="@+id/schoolName"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:layout_alignTop="@id/schoolName"
      android:paddingTop="10dp"
      android:paddingBottom="10dp"
      android:hint="xx/xx/xx"
      android:inputType="textPersonName"
      android:textAlignment="viewStart"/>

    <Button
      android:id="@+id/createStudent"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:layout_alignTop="@id/schoolName"
      android:paddingTop="10dp"
      android:paddingBottom="10dp"
      android:text="Create"/>

    <Button
      android:id="@+id/cancelStudent"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:layout_alignTop="@id/new_student"
      android:paddingTop="10dp"
      android:paddingBottom="10dp"
      android:text="Cancel"/>
  </LinearLayout>

</LinearLayout>
